@model IEnumerable<ChurchWebsite.Models.Ministry>

@{
    ViewBag.Title = "Ministries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ministries</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MinistryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.MinistryName,"MinistryLeaders","Leader", new {ID = item.MinistryID},null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MinistryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MinistryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MinistryID })
        </td>
    </tr>
}

</table>
