<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="http://bootswatch.com/superhero/bootstrap.min.css" rel="shortcut icon" type="image/x-icon" />
        <script src="https://code.jquery.com/jquery-2.1.4.js"></script>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrapcss")
        @Scripts.Render("~/bundles/modernizr")

        <style>
            body{
                font-family: "Segoe UI", Georgia, sans-serif;
            }
           
            ul {
                list-style: none;
            }
            body div div ul ul {
    position: fixed;
    -moz-opacity:0.8;
    opacity: 2.0;
    background-color: white;
    width : auto;

}
body nav ul ul li a{
    text-align: center;
    text-orientation: upright;

}
            #body {
                background-color: white;
            }
        </style>
        <script>

            $(document).ready(function () {
                $("#BelovedTitle").css("color", "#005C1F");
            });

            $(document).ready(function () {
                $("#navhead").css("background-color", "#FFFFFF");
                $("#navhead").css("box-shadow", "10px 10px 5px #888888");
            });
            $(document).ready(function () {
                $("#NewChildren").children().hide();
            });
            $(document).ready(function () {
                $("#New").mouseenter(function () {
                    $("#NewChildren").children().show(1000)
                });
                $("#New").mouseleave(function () {
                    $("#NewChildren").children().hide();
                });
            });
            $(document).ready(function () {
                $("#Introhead").children().hide();
            });
            $(document).ready(function () {
                $("#Intro").mouseenter(function () {
                    $("#Introhead").children().show(1000);
                });
                $("#Intro").mouseleave(function () {
                    $("#Introhead").children().hide();
                });
            });
            $(document).ready(function () {
                $("#MinistryList").children().hide();
            });
            $(document).ready(function () {
                $("#Ministry").mouseenter(function () {
                    $("#MinistryList").children().show(1000);
                });
                $("#Ministry").mouseleave(function () {
                    $("#MinistryList").children().hide();
                });

            });
            $(document).ready(function () {
                $("#EventsList").children().hide();

            });
            $(document).ready(function () {
                $("#Events").mouseenter(function () {
                    $("#EventsList").children().show();
                });
                $("#Events").mouseleave(function () {
                    $("#EventsList").children().hide();
                });
            });
            $(document).ready(function () {
                $("#MoreList").children().hide();
            });
            $(document).ready(function () {
                $("#More").mouseenter(function () {
                    $("#MoreList").children().show(1000);
                    $("#More").mouseleave(function () {
                        $("#MoreList").children().hide();
                    });
                });
            });
        </script>
    </head>
    <body>
        <header>
             <div class="container">
                 <div class ="row">
                  <nav class="navbar navbar-default" role="navigation" id="navhead">
                 <div class="container-fluid">
                     <!-- Brand and toggle get grouped for better mobile display -->
                     <div class="navbar-header" id="title">
                         <a class="navbar-brand" id="BelovedTitle" href="Welcome/Index"><b>Beloved's Church</b></a>
                     </div>
                     <!-- Collect the nav links, forms, and other content for toggling -->
                     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                         <img src="../../Images/crosspic.jpg" alt="" height="40" width="40" />
                         <div class="nav navbar-nav navbar-right">
                             <div class="nav navbar-nav navbar-middle">
                                 <a href="Welcome/Index"><b>Home</b></a>
                             </div>

                             <div class="nav navbar-nav navbar-right">
                                 <div class="nav navbar-nav navbar-left ">
                                     <ul id="New" class="dropdown">
                                         <li class ="doprdown-menu"><a href="#"><b>I'm New</b></a>
                                             <ul id="NewChildren">
                                                 <li><a href="../../Info/WhatToExpect">What to expect</a></li>
                                                 <li><a href="../../Info/Services">Service</a></li>
                                                 <li><a href="../../Email/Submit">Submit a Prayer Request</a></li>
                                             </ul>
                                         </li>
                                     </ul>
                                 </div>
                                  <div class="nav navbar-nav navbar-left">
                                     <ul id="Intro">
                                         <li><a href="#"><b>Who we are</b></a>
                                             <ul id="Introhead">
                                                 <li><a href="../../Info/Vision">Vision</a></li>
                                                 <li><a href="../../Info/Beliefs">Beliefs</a></li>
                                                 <li><a href="../../Info/Distinctives">Distinctives</a></li>
                                                 <li><a href="../../Leader/Leadership">Leadership</a></li>
                                             </ul>
                                         </li>
                                     </ul>
                                 </div>
                                 <div class="nav navbar-nav navbar-left">
                                     <ul class ="SermonsUL">
                                <li><a href ="#"><b>Sermons</b></a></li> 
                                     </ul>
                                 </div>
                                 <div class="nav navbar-nav navbar-left">
                                     <ul id="Ministry" >
                                         <li><a href="#"><b>Ministries</b></a>
                                             <ul id="MinistryList" >
                                                 <li><a href="../../Info/Worship">Worship</a></li>
                                                 <li><a href="../../Ministry/Youth">Youth</a></li>
                                                 <li><a href="../../Ministry/Teens">Teens</a></li>
                                                 <li><a href="../../Ministry/Kids">Kids</a></li>
                                                 <li><a href="../../Ministry/Prayer">Prayer</a></li>
                                                 <li><a href="../../Ministry/BibleStudy">Bible Study</a></li>
                                             </ul>
                                         </li>
                                     </ul>
                                 </div>
                                <div class="nav navbar-nav navbar-left">
                                <ul id="Events">
                                         <li><a href="#"><b>Events</b></a>
                                             <ul id="EventsList" >
                                                 <li><a href="#">Upcoming Events</a></li>
                                                 <li><a href="#">Calendar</a></li>
                                             </ul>
                                         </li>
                                     </ul>
                               </div>
                               <div class="nav navbar-nav navbar-left">
                                   <ul id="connect">
                                       <li><a href="#"><b>Connect</b></a></li>
                                   </ul>
                               </div>
                               <div class="nav navbar-nav navbar-left">
                                <ul id="More">
                                         <li><a href="#"><b>More</b></a>
                                             <ul id="MoreList" >
                                                 <li><a href="Views/Email/Submit">Submit a Prayer Request</a></li>
                                                 <li><a href="#">PictureGallery</a></li>
                                                 <li><a href="../Info/Missions">Missions</a></li>
                                                 <li><a href="../Info/Partners">Partners</a></li>

                                             </ul>
                                         </li>
                                     </ul>
                               </div>
                             </div>
                         </div>
                     </div>
                     <!-- /.navbar-collapse -->
                 </div>
                 <!-- /.container-fluid -->
             </nav>
                 <div class="row">
                    <section id="login" style="text-align:right">
                        @Html.Partial("_LoginPartial")
                    </section>
               </div>
             </div>
            </div>                
        </header>
        <div id="body">
            <div class="container" id="#Actual">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
             </div>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
